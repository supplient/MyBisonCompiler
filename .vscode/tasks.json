{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Lex",
            "command": "flex",
            "args": [
                "--debug",
                "scanner.l"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Build Bison",
            "command": "bison",
            "args": [
                "-d",
                "parser.y"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Compile",
            "command": "g++",
            "args": [
                "-g",
                "lex.yy.cc",
                "parser.tab.c",
                "driver.cpp",
                "main.cpp",
                "-o",
                "./output/rtex"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Build & Compile",
            "command": "echo Done",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Build Lex",
                "Build Bison",
                "Compile"
            ],
            "dependsOrder": "sequence"
        },
        {
            "type": "shell",
            "label": "Run: Use testfile",
            "command": "./output/rtex",
            "args": [
                "<testfile.txt",
                "2>debug.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Run: Use testfile [Debug]",
            "command": "./output/rtex",
            "args": [
                "-d",
                "<testfile.txt",
                "2>debug.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Build & Compile & Instant Run",
            "command": "./output/rtex",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Build & Compile"
            ],
            "dependsOrder": "sequence"
        }
    ],
    "version": "2.0.0"
}